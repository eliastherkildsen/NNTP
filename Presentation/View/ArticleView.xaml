<UserControl x:Class="NNTP_NEWS_CLIENT.Presentation.View.ArticleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NNTP_NEWS_CLIENT.Presentation.View"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Top">
            <Button Content="Back"></Button>
            <!-- ARTICAL ID -->
            <WrapPanel>
                <Label Content="Article id"></Label>
                <Label Content="{Binding ArticleId}"></Label>
            </WrapPanel>
            
            <!-- ARTICAL SUBJECT -->
            <WrapPanel>
                <Label Content="Article subject"></Label>
                <Label Content="{Binding ArticleSubject}"></Label>
            </WrapPanel>
            
        </StackPanel>
        
    </DockPanel>
    
</UserControl>
